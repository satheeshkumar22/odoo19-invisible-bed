<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.form.split.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="button_split_invoice" string="Split Invoice"  type="object" class="oe_highlight"
                invisible="not split_btn_visibility"
                />
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="split_btn_visibility" readonly="1" invisible="1"/>
                <field name="custom_name"  invisible="state != 'draft'"/>
            </xpath>
            <xpath expr="//notebook//page[@id='other_tab']//group[@id='other_tab_group']/group[last()]" position="after">
                    <group name="vehicle" string="Vehicle">
                        <field name="e_way_bill"/>
                        <field name="transporter_id"/>
                        <field name="vehicle_no"/>
                    </group>
                </xpath>

        </field>
    </record>

</data>
</odoo>
