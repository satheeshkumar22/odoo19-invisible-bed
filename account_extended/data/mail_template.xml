<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
<!--        Email Template for Payment Reminder-->
        <record id="mail_template_data_payment_reminder" model="mail.template">
            <field name="name">Payment Reminder: Send by Email</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">{{ object.company_id.name }} Payment Reminder (Ref {{ object.name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello <t t-out="object.partner_id.name or ''"/>,<br/><br/>
                        We are glad to inform you that your order has been shipped.
                        <br/>
                        You are requested to pay a balance amount  INR  <t t-out="object.amount_residual or ''"/> against delivery.
                        <br/>
                        You have multiple options to pay your balance due.
                        <br/>
                        <strong>Banking Details:</strong>
                        Account Holder's Name: Futur Decor Solutions Pvt Ltd
                        Branch: Axis Bank, Koramangala
                        Current Acc No: 913020035775084
                        IFSC: UTIB0001506
                        <br/>
                        Also attached UPI QR code for your reference
                        You can Use the Following link as well : -
                        <br/>
                        <a href="https://rzp.io/i/lPlkdu9Vn">https://rzp.io/i/lPlkdu9Vn</a>
                        <br/><br/>
                        Thank you,
                        <t t-if="not is_html_empty(object.user_id.signature)">
                            <div>--<br/><t t-out="object.user_id.signature or ''"/></div>
                        </t>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
<!--        Email Template for Payment Complete-->
        <record id="mail_template_data_payment_complete" model="mail.template">
            <field name="name">Payment Complete: Send by Email</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">{{ object.company_id.name }} Payment (Ref {{object.name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.parent_id.name or ''"/>,<br/><br/>
                        Thank you for your payment against <t t-out="object.name or ''"/>
                        <br/>
                        We look forward to your continued patronage.
                        <br/><br/>
                        Thank you,
                        <t t-if="not is_html_empty(object.user_id.signature)">
                            <div>--<br/><t t-out="object.user_id.signature or ''"/></div>
                        </t>
                    </p>
                </div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
