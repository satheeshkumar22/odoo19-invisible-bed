<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_auto_payment_reminder" model="ir.cron">
            <field name="name">Invoice Payment Reminder</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
<!--            <field name="numbercall">-1</field>-->
<!--            <field name="doall" eval="False"/>-->
            <field name="model_id" ref="account.model_account_move"/>
            <field name="code">model._send_payment_reminder_email()</field>
            <field name="state">code</field>
            <field name="active" eval="False"/>
        </record>
        <record id="ir_cron_auto_payment_complete" model="ir.cron">
            <field name="name">Invoice Payment Complete</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
<!--            <field name="numbercall">-1</field>-->
<!--            <field name="doall" eval="False"/>-->
            <field name="model_id" ref="account.model_account_move"/>
            <field name="code">model._send_payment_complete_email()</field>
            <field name="state">code</field>
            <field name="active" eval="False"/>
        </record>

    </data>
</odoo>
